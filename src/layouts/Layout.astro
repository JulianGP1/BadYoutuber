---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="page">
			<div id="head" class=" fixed h-16 w-screen flex items-center bg-slate-300">
				<img class="h-16 ml-16" src="/img.png" alt="">
				<a href="#" class="font-bold ml-auto 	">Home</a>
				<a href="#" class="font-bold ml-4">Shom</a>
				<a href="#" class="font-bold ml-4">Product</a>
				<a href="#" class="font-bold ml-4">Blog</a>
				<a href="#" class="font-bold ml-4">Contant</a>
				<div class="relative inline-block text-left">
					<button class="peer text-white px-4 py-2 rounded-md focus:outline-none">
						<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
							<path fill="currentColor" d="M11.708 14.17q.124.13.289.13t.295-.13l2.094-2.094q.187-.188.09-.44q-.097-.251-.368-.251H9.883q-.264 0-.36.252t.09.439zm.295 6.83q-1.866 0-3.51-.708q-1.643-.709-2.859-1.924t-1.925-2.856T3 12.003t.709-3.51Q4.417 6.85 5.63 5.634t2.857-1.925T11.997 3t3.51.709q1.643.708 2.859 1.922t1.925 2.857t.709 3.509t-.708 3.51t-1.924 2.859t-2.856 1.925t-3.509.709M12 20q3.35 0 5.675-2.325T20 12t-2.325-5.675T12 4T6.325 6.325T4 12t2.325 5.675T12 20m0-8" />
						</svg>
					</button>
			  
					
					<div class="hidden peer-focus:block absolute mt-2 w-48 rounded-md shadow-lg bg-white">
					  <div class="py-1">
						<a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Option 1</a>
						<a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Option 2</a>
						<a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Option 3</a>
					  </div>
					</div>
				  </div>
				<svg id="user" xmlns="http://www.w3.org/2000/svg" class="ml-auto h-[30px] w-[25px]" viewBox="0 0 256 256">
					<path fill="currentColor" d="M234.38 210a123.36 123.36 0 0 0-60.78-53.23a76 76 0 1 0-91.2 0A123.36 123.36 0 0 0 21.62 210a12 12 0 1 0 20.77 12c18.12-31.32 50.12-50 85.61-50s67.49 18.69 85.61 50a12 12 0 0 0 20.77-12M76 96a52 52 0 1 1 52 52a52.06 52.06 0 0 1-52-52" />
				</svg>
				<svg id="lupa" xmlns="http://www.w3.org/2000/svg" class="h-[25px] w-[25px]" viewBox="0 0 256 256">
					<path fill="currentColor" d="m229.66 218.34l-50.07-50.06a88.11 88.11 0 1 0-11.31 11.31l50.06 50.07a8 8 0 0 0 11.32-11.32M40 112a72 72 0 1 1 72 72a72.08 72.08 0 0 1-72-72" />
				</svg>
				<svg xmlns="http://www.w3.org/2000/svg" class="h-[30px] w-[25px] font-bold mr-7"  viewBox="0 0 48 48">
					<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" d="m5.815 15.64l2.056 20.267a8.445 8.445 0 0 0 8.402 7.593h15.454a8.445 8.445 0 0 0 8.402-7.593l2.056-20.268z" />
					<path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" d="M15.633 15.64v-2.816a8.366 8.366 0 0 1 16.732 0v2.815" />
				</svg>
			</div>
			<div id="contain" class="pt-20 bg-slate-600 min-h-screen w-screen">
				<div id="Conteinbox" class="h-screen w-screen">
					<div id="box" class="bg-white h-2/3 w-2/4 ml-auto mr-auto rounded-md">
						<div id="items" class="grid grid-cols-2 h-[400px] items-center">
							<!-- Columna 1: Imagen -->
							<div class="flex justify-center">
								<img class="ml-2 h-40 w-auto" src="/R.jpeg" alt="Apple AirPods">
							</div>
							
							<!-- Columna 2: Enlaces -->
							<div class="flex ml-4 flex-col space-y-2 justify-center">
								<a href="#" class="bg-blue-400 text-white px-4 py-2 rounded-xl max-w-max">New</a>
								<a href="#" class="text-lg font-semibold">Apple AirPods</a>
								<a href="#" class="bg-blue-500 w-3/4 rounded-2xl ml text-center text-white text-[20px]">3rd  Generation</a>
								<h1 class="border-l-2 border-spacing-2 pl-4">
									Personalized special Audio with dynamic head tracking places sound all around you
								</h1>
								
							</div>
						</div>
						
					</div>
				</div>

			</div>
		</div>
	</body>
</html>